<UserControl x:Class="WpfDemo.Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:WpfDemo"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:EditorViewModel x:Key="ViewModel"/>
    </UserControl.Resources>
    <!--<UserControl DataContext="{Binding Source={StaticResource ViewModel}}"/>-->
    
    <StackPanel DataContext="{StaticResource ViewModel}">
        <TextBox Text="{Binding CodeBlock}" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" 
                 Height="100" Background="LightGray" 
                 FontFamily="Consolas" FontSize="16"/>
        <Button Command="{Binding Run}" 
                Width="100" Height="30" 
                Content="Run"/>
        <TextBox Text="{Binding Feedback}" 
                 FontFamily="Consolas" FontSize="16"/>
    </StackPanel>
</UserControl>
