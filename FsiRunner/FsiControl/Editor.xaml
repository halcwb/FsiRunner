<UserControl x:Class="ClearLines.FsiControl.Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:FsiControl="clr-namespace:ClearLines.FsiControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <FsiControl:EditorViewModel x:Key="ViewModel"/>
    </UserControl.Resources>

    <DockPanel DataContext="{StaticResource ViewModel}">
        <Border DockPanel.Dock="Top">
            <StackPanel>
                <ListView ItemsSource="{Binding CodeBlocks}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="2" Padding="2">
                                <StackPanel>
                                    <TextBox  
                                        Text="{Binding Code}"                  
                                        TextWrapping="Wrap" 
                                        AcceptsReturn="True"
                                        Background="LightGray" 
                                        FontFamily="Consolas" 
                                        FontSize="13"/>
                                    <Border>
                                        <Button
                                            Command="{Binding Run}"
                                            HorizontalAlignment="Right"
                                            Content="Run" 
                                            FontSize="9"
                                            Width="30" 
                                            Height="20"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border>
                    <Button
                        Command="{Binding AddCodeBlock}"
                        Content="New Block"
                        HorizontalAlignment="Right"
                        FontSize="9"
                        Width="60" 
                        Height="20"/>
                </Border>
            </StackPanel>
        </Border>

        <Border Margin="5">
            <TextBox 
                Text="{Binding Feedback}" 
                IsReadOnly="True"
                VerticalScrollBarVisibility="Auto"
                Background="LightGray" 
                FontFamily="Consolas" 
                FontSize="13"/>
        </Border>

    </DockPanel>
</UserControl>
